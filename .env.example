# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=bot_token
TELEGRAM_CHAT_ID=chat_id

# Optional: Comma-separated list of authorized user IDs
# Leave empty to allow everyone (not recommended though)
AUTHORIZED_USERS=123456789,987654321

# Huami Token Configuration
HUAMI_EMAIL="huami-email"
HUAMI_PASSWORD="top_secret_password"

# Optional: Huami token directory (default: /app/huami-token)
HUAMI_TOKEN_DIR=/app/huami-token
